<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="br.com.movieclub.MainActivity">

    <TextView
        android:id="@+id/tv_main_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Busca de Filmes:"
        android:textSize="25dp"
        android:textColor="#0A284A" />

    <TextView
        android:id="@+id/tv_main_observation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dica: Realize sua busca no idioma original do filme desejado."
        android:textSize="10dp"
        android:textColor="#FF9200"
        android:layout_below="@id/tv_main_title" />

    <EditText
        android:id="@+id/et_main_search"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_main_observation"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="87dp"
        android:singleLine="true"
        android:inputType="textPersonName" />

    <Button
        android:id="@+id/bt_main_search"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pesquisar"
        android:layout_below="@+id/et_main_search"
        android:layout_centerHorizontal="true"
        android:textColor="#000000" />

    <Button
        android:id="@+id/bt_main_history"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="HistÃ³rico"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:textColor="#A82712" />

</RelativeLayout>
