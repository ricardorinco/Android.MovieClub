<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".HistoryActivity">

    <TextView
        android:id="@+id/tv_listview_history_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="26dp"
        android:text="Seu histórico de buscas..."
        android:textColor="#0A284A"
        android:layout_gravity="center_horizontal"
        android:layout_margin="10dp" />

    <ListView
        android:id="@+id/lv_listview_history_search"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/tv_listview_history_title"
        android:layout_above="@+id/bt_listview_history_delete" />

    <Button
        android:id="@+id/bt_listview_history_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Limpar Histórico"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:textColor="#A82712" />

</RelativeLayout>